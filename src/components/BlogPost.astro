---
import EmailSignup from './Subscribe/EmailSignup.astro'

export interface Props {
  title: string;
  date: string;
  hero: string;
  youtube: string;
}

const { title, date, hero, youtube } = Astro.props;
---

<article class="max-w-5xl mx-auto px-3">
  <header class="mx-auto max-w-3xl text-center content">
    <h1>{title}</h1>
  </header>

  <!-- Image -->
  {hero && 
  <div class="w-full object-cover">
    <img class="rounded-3xl mx-auto w-1/3"  loading="lazy" src={hero} alt={title} />}
    </div>

  <section class="max-w-3xl mx-auto py-6 lg:py-12 content">
    <slot />
  </section>

</article>
